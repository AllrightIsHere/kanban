{
    "name": "kanban-api",
    "version": "1.0.0",
    "description": "",
    "main": "build/main.ts",
    "scripts": {
        "test": "jest --clearCache && jest --coverage=false --verbose",
        "coverage": "jest --clearCache && jest --coverage",
        "build": "npm run prisma:generate && cross-env ./node_modules/typescript/bin/tsc && tsc-alias",
        "dev": "npm run prisma:generate && cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --inspect --exit-child --transpile-only --ignore-watch node_modules src/main.ts",
        "clean-build": "rm -rf build/",
        "lint": "eslint --ext .ts,.js -c eslint.config.mjs src",
        "lint-fix": "eslint --ext .ts,.js -c eslint.config.mjs src --fix",
        "format": "prettier --write src",
        "db:migration:create": "prisma migrate dev",
        "prisma:migrate-dev": "dotenv -e .env.local prisma migrate dev",
        "prisma:migrate-prod": "prisma migrate deploy",
        "prisma:generate": "prisma generate"
    },
    "prisma": {
        "schema": "src/database/prisma/schema/schema.prisma"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@types/express": "^4.17.21",
        "@types/express-formidable": "^1.2.0",
        "@types/jest": "^29.1.1",
        "@types/node": "^20.14.2",
        "@types/uuid": "^8.0.0",
        "cross-env": "^7.0.2",
        "dotenv-cli": "^7.0.0",
        "eslint": "^9.23.0",
        "eslint-config-prettier": "^10.1.1",
        "jest": "^29.1.2",
        "mockdate": "^3.0.5",
        "prettier": "^3.5.3",
        "prisma": "^5.15.0",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.4.0",
        "ts-node-dev": "^1.1.8",
        "tsc-alias": "^1.8.2",
        "tsconfig-paths": "^4.1.2",
        "typescript": "^5.4.5",
        "typescript-eslint": "^8.28.0"
    },
    "dependencies": {
        "@prisma/client": "^5.15.0",
        "dotenv": "^16.0.3",
        "express": "^4.19.2",
        "express-async-errors": "^3.1.1",
        "express-formidable": "^1.2.0",
        "express-rate-limit": "^7.1.5",
        "mysql2": "^3.14.1",
        "reflect-metadata": "^0.1.13",
        "uuid": "^8.0.0",
        "yup": "^0.32.11"
    }
}
